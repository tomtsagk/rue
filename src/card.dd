(include "card.ddh")

(class_function Card void create (group)
	(group

	(= this.id 0)
	(dd_matrix_identity this.target)

	(= this.hidden 0)

	)
)

(class_function Card void draw (group)
	(group
	(dd_matrix_push)
	(dd_multMatrixf this)
	(if (== this.hidden 0)
		(this.mesh.draw)
	)
	(this.meshBack.draw)
	(dd_matrix_pop)
	)
)

(class_function Card void clean (group)
	(group
	)
)
